#!/usr/bin/env python

import os, pentagon, sys, getopt
from shutil import copytree, ignore_patterns
path = os.path.dirname(pentagon.__file__)


# print sys.argv
try:
  opts, args = getopt.getopt(sys.argv[1:],"n:",["name="])
except getopt.GetoptError:
  print 'getopt error'
  sys.exit(2)
for opt, arg in opts:
  if ("-n", "--name"):
    name = arg
print 'Name is: ', name

copytree( path , name , symlinks=True, ignore=ignore_patterns('__init__.py' , '*.pyc', 'release.py'))



