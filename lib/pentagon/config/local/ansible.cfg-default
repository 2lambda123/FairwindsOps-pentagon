[defaults]
inventory = $INFRASTRUCTURE_REPO/plugins/inventory
roles_path = ~/workspace/ansible-roles/$PROJECT_NAME/roles:$INFRASTRUCTURE_REPO/roles
filter_plugins = $INFRASTRUCTURE_REPO/plugins/filter_plugins
retry_files_save_path = ~/.ansible-retry
hash_behavior = merge

[ssh_connection]
# Replace with your absolute path since ssh_args relies on the current working directory.
# shell vars such as `~` are not supported as well
# EXAMPLE
# ssh_args = -F /Users/janedoe/workspace/projects/demo/demo-infrastructure/config/local/ssh_config
